{
  "openapi": "3.0.1",
  "info": {
    "title": "Approve a Fingerprint for the Connection",
    "description": "Approves a fingerprint, enabling Fivetran to trust it for a source database and establish connections via an SSH tunnel."
  },
  "path": "/v1/connections/{connectionId}/fingerprints",
  "method": "POST",
  "operation": {
    "tags": [
      "Certificate Management"
    ],
    "summary": "Approve a Fingerprint for the Connection",
    "description": "Approves a fingerprint, enabling Fivetran to trust it for a source database and establish connections via an SSH tunnel.",
    "operationId": "approve_connection_fingerprint",
    "parameters": [
      {
        "name": "connectionId",
        "in": "path",
        "description": "The unique identifier for the connection within the Fivetran system.",
        "required": true,
        "schema": {
          "type": "string",
          "example": "connectionId"
        },
        "example": "connectionId"
      },
      {
        "name": "Accept",
        "in": "header",
        "schema": {
          "type": "string",
          "example": "application/json",
          "default": "application/json"
        }
      }
    ],
    "requestBody": {
      "content": {
        "application/json": {
          "schema": {
            "$ref": "#/components/schemas/ApproveFingerprintRequest"
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "Successful response",
        "content": {
          "application/json": {
            "schema": {
              "required": [
                "code",
                "data"
              ],
              "properties": {
                "code": {
                  "type": "string",
                  "description": "Response status code",
                  "example": "Success"
                },
                "message": {
                  "type": "string",
                  "description": "Response status text",
                  "example": "Operation performed."
                },
                "data": {
                  "$ref": "#/components/schemas/FingerprintDetailsResponse"
                }
              }
            }
          }
        }
      },
      "400": {
        "description": "Missing `hash` or `public_key` fields in request payload"
      },
      "404": {
        "description": "Connection not found"
      }
    }
  },
  "components": {
    "schemas": {
      "FingerprintDetailsResponse": {
        "required": [
          "hash",
          "id",
          "public_key",
          "validated_by",
          "validated_date"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The unique identifier of the fingerprint (Base64URL encoded hash of the fingerprint).",
            "example": "Y29ubmVjdG9yIGZpbmdlcnByaW50IGhhc2g"
          },
          "hash": {
            "type": "string",
            "description": "Hash of the fingerprint.",
            "example": "eUtPirI6yy..."
          },
          "validated_by": {
            "type": "string",
            "description": "The unique identified for the user who has approved the fingerprint.",
            "example": "user_id"
          },
          "public_key": {
            "type": "string",
            "description": "The SSH public key.",
            "example": "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC6 ... fivetran user key"
          },
          "validated_date": {
            "type": "string",
            "description": "Date when fingerprint has been validated and approved.",
            "format": "date-time",
            "example": "2024-01-01T00:00:00Z"
          }
        }
      },
      "ApproveFingerprintRequest": {
        "required": [
          "hash",
          "public_key"
        ],
        "type": "object",
        "properties": {
          "hash": {
            "type": "string",
            "description": "Hash of the fingerprint.",
            "example": "eUtPirI6yy..."
          },
          "public_key": {
            "type": "string",
            "description": "The SSH public key.",
            "example": "ssh-rsa AAAAB3NzaC1yc2EAAAADAQABAAABAQC6 ... fivetran user key"
          }
        }
      }
    }
  }
}