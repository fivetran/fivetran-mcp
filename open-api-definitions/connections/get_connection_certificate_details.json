{
  "openapi": "3.0.1",
  "info": {
    "title": "Retrieve Connection Certificate Details",
    "description": "Returns details of the certificate approved for the specified connection with specified certificate hash."
  },
  "path": "/v1/connections/{connectionId}/certificates/{hash}",
  "method": "GET",
  "operation": {
    "tags": [
      "Certificate Management"
    ],
    "summary": "Retrieve Connection Certificate Details",
    "description": "Returns details of the certificate approved for the specified connection with specified certificate hash.",
    "operationId": "get_connection_certificate_details",
    "parameters": [
      {
        "name": "connectionId",
        "in": "path",
        "description": "The unique identifier for the connection within the Fivetran system.",
        "required": true,
        "schema": {
          "type": "string",
          "example": "connectionId"
        },
        "example": "connectionId"
      },
      {
        "name": "hash",
        "in": "path",
        "description": "The unique identifier of the certificate (Base64URL encoded hash of the certificate).",
        "required": true,
        "schema": {
          "type": "string",
          "example": "Y29ubmVjdG9yIGNlcnRpZmljYXRlIGhhc2g"
        },
        "example": "Y29ubmVjdG9yIGNlcnRpZmljYXRlIGhhc2g"
      },
      {
        "name": "Accept",
        "in": "header",
        "schema": {
          "type": "string",
          "example": "application/json",
          "default": "application/json"
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Successful response",
        "content": {
          "application/json": {
            "schema": {
              "required": [
                "code",
                "data"
              ],
              "properties": {
                "code": {
                  "type": "string",
                  "description": "Response status code",
                  "example": "Success"
                },
                "message": {
                  "type": "string",
                  "description": "Response status text",
                  "example": "Operation performed."
                },
                "data": {
                  "$ref": "#/components/schemas/CertificateDetailsResponse"
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "Certificate with specified hash not found"
      }
    }
  },
  "components": {
    "schemas": {
      "CertificateDetailsResponse": {
        "required": [
          "hash",
          "id",
          "name",
          "public_key",
          "sha1",
          "sha256",
          "type",
          "validated_by",
          "validated_date"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The unique identifier of the certificate (Base64URL encoded hash of the certificate).",
            "example": "Y29ubmVjdG9yIGNlcnRpZmljYXRlIGhhc2g"
          },
          "name": {
            "type": "string",
            "description": "The certificate name.",
            "example": "Certificate Name"
          },
          "hash": {
            "type": "string",
            "description": "Hash of the certificate.",
            "example": "jhg5UI7fgrI6yy..."
          },
          "type": {
            "type": "string",
            "description": "Type of the certificate.",
            "example": "TLS"
          },
          "sha1": {
            "type": "string",
            "description": "SHA1 of certificate.",
            "example": "c8de1d13vtu435ilj435lj345796d8jh7hk8hgk"
          },
          "sha256": {
            "type": "string",
            "description": "SHA256 of certificate.",
            "example": "5vt6rt6jtr654eef94ec3f91122a623b389f4d331ff330026e43af21013vb45f"
          },
          "validated_date": {
            "type": "string",
            "description": "Date when certificate has been validated and approved.",
            "format": "date-time",
            "example": "2023-08-20T10:15:20.677566Z"
          },
          "validated_by": {
            "type": "string",
            "description": "The unique identified for the user who has approved the certificate.",
            "example": "user_id"
          },
          "public_key": {
            "type": "string",
            "description": "The certificate decoded public key.",
            "example": "Sun RSA public key, 2048 bits params: null modulus: 7685655455... public exponent: 65537"
          }
        }
      }
    }
  }
}