{
  "openapi": "3.0.1",
  "info": {
    "title": "Retrieve Webhook Details",
    "description": "This endpoint allows you to retrieve details of the existing webhook for a given identifier"
  },
  "path": "/v1/webhooks/{webhookId}",
  "method": "GET",
  "operation": {
    "tags": [
      "Webhook Management"
    ],
    "summary": "Retrieve Webhook Details",
    "description": "This endpoint allows you to retrieve details of the existing webhook for a given identifier",
    "operationId": "webhook_details",
    "parameters": [
      {
        "name": "webhookId",
        "in": "path",
        "description": "The webhook ID",
        "required": true,
        "schema": {
          "type": "string",
          "example": "webhookId"
        },
        "example": "webhookId"
      },
      {
        "name": "Accept",
        "in": "header",
        "schema": {
          "type": "string",
          "example": "application/json",
          "default": "application/json"
        }
      }
    ],
    "responses": {
      "200": {
        "description": "Successful response",
        "content": {
          "application/json": {
            "schema": {
              "required": [
                "code",
                "data"
              ],
              "properties": {
                "code": {
                  "type": "string",
                  "description": "Response status code",
                  "example": "Success"
                },
                "message": {
                  "type": "string",
                  "description": "Response status text",
                  "example": "Operation performed."
                },
                "data": {
                  "$ref": "#/components/schemas/WebhookResponse"
                }
              }
            }
          }
        }
      },
      "404": {
        "description": "Webhook not found"
      }
    }
  },
  "components": {
    "schemas": {
      "WebhookResponse": {
        "required": [
          "active",
          "created_at",
          "created_by",
          "events",
          "id",
          "type",
          "url"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the webhook.",
            "example": "webhook_id"
          },
          "type": {
            "type": "string",
            "description": "The type of the webhook. Specifies whether the webhook is associated with a group or an account.",
            "example": "group",
            "enum": [
              "group",
              "account"
            ]
          },
          "url": {
            "type": "string",
            "description": "The endpoint URL where webhook events will be delivered.",
            "example": "https://your-host.your-domain/webhook"
          },
          "events": {
            "type": "array",
            "description": "List of event types that trigger the webhook.",
            "example": [
              "sync_start",
              "sync_end"
            ],
            "items": {
              "type": "string"
            }
          },
          "active": {
            "type": "boolean",
            "description": "Indicates if the webhook is enabled to send events immediately upon occurrence.",
            "example": true
          },
          "secret": {
            "type": "string",
            "description": "A secret string used to sign webhook payloads for verification.",
            "example": "******"
          },
          "created_at": {
            "type": "string",
            "description": "Timestamp indicating when the webhook was created.",
            "format": "date-time",
            "example": "2024-01-01T00:00:00Z"
          },
          "created_by": {
            "type": "string",
            "description": "Identifier of the user who created the webhook setting.",
            "example": "user_id"
          },
          "group_id": {
            "type": "string",
            "description": "Unique identifier for the group associated with the webhook.",
            "example": "group_id"
          }
        }
      }
    }
  }
}